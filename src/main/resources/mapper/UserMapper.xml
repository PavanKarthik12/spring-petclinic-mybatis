<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.springframework.samples.petclinic.mapper.UserMapper">
    <resultMap id="user" type="org.springframework.samples.petclinic.model.User">
        <id column="username" property="username" />
        <result column="password" property="password" />
        <result column="enabled" property="enabled" javaType="java.lang.Boolean"/>
        <collection property="roles" ofType="org.springframework.samples.petclinic.model.Role" >
 			<result property="id" column="id"/>
 			<result property="name" column="role"/>
 		</collection>
    </resultMap>

    <insert id="save" parameterType="org.springframework.samples.petclinic.model.User">
    	<!-- should check existance of account first -->
    	UPDATE users SET password=#{password}, enabled=#{enabled} WHERE username=#{username};
    	DELETE FROM roles WHERE username=#{username};
    	INSERT INTO roles(username, role) VALUES(
    		#{username},
    	<foreach collection="roles" item="item" index="index" separator =",">
       		#{item.name}
  		</foreach>
  			);
    </insert>
</mapper>